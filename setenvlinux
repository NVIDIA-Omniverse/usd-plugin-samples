CONFIG=release
if [ $# == 1 ]; then
    if [ "$1" == "debug" ]; then
        CONFIG=debug
    fi
fi

echo "Setting environment for $CONFIG configuration..."

if [ ! -d _dpvenv ]; then
    $PWD/_build/usd-deps/python/python -m venv _dpvenv
    source $PWD/_dpvenv/bin/activate
    pip install PySide2
    pip install PyOpenGL
else
    source $PWD/_dpvenv/bin/activate
fi

export PYTHONPATH=$PWD/_build/usd-deps/nv-usd/$CONFIG/lib/python
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$PWD/_build/usd-deps/python:$PWD/_build/usd-deps/nv-usd/$CONFIG/bin:$PWD/_build/usd-deps/nv-usd/$CONFIG/lib:$PWD/_build/target-deps/zlib/lib:$PWD/_install/linux-$(arch)/$CONFIG/edfFileFormat/lib:$PWD/_install/linux-$(arch)/$CONFIG/omniMetProvider/lib
export PXR_PLUGINPATH_NAME=$PWD/_install/linux-$(arch)/$CONFIG/omniMetSchema/resources:$PWD/_install/linux-$(arch)/$CONFIG/edfFileFormat/resources:$PWD/_install/linux-$(arch)/$CONFIG/omniMetProvider/resources